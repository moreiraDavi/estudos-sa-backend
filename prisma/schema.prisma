generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String   @unique
  name          String
  password      String
  preferencias  Preferencia[]
  rotinas       Rotina[]
}

model Concurso {
  id                   String  @id @default(auto()) @map("_id") @db.ObjectId
  name                 String
  dataInscricaoFim     String
  dataProva            String
  estado               String
  numVagas             Int
  banca                String
  salario              String
  preferencias         Preferencia[]
  rotinas              Rotina[]
}

model Preferencia {
  id                   String    @id @default(auto()) @map("_id") @db.ObjectId
  userId               String    @db.ObjectId
  user                 User      @relation(fields: [userId], references: [id])
  concursoId           String    @db.ObjectId
  concurso             Concurso  @relation(fields: [concursoId], references: [id])
  diasEstudo           Int
  turno                String
  duracao              String
}

model Rotina {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  userId        String     @db.ObjectId
  user          User       @relation(fields: [userId], references: [id])
  concursoId    String     @db.ObjectId
  concurso      Concurso   @relation(fields: [concursoId], references: [id])
  semana        Int

  conteudo1     String?
  conteudo2     String?
  conteudo3     String?
  conteudo4     String?
  conteudo5     String?
  conteudo6     String?
  conteudo7     String?

  criadoEm      DateTime   @default(now())
}
